@model IEnumerable<DATA.ViewModel.AttendanceDataViewModel>

@{
    ViewData["Title"] = "Attendance List";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Attendance Report</h2>
    <div>
        <a asp-action="Create" class="btn btn-success">Add New Attendance</a>
    </div>
</div>

<!-- ====== FILTER FORM ====== -->
<form method="get" class="mb-3 row g-3">
    <div class="col-md-3">
        <input type="text" name="employeeId" class="form-control" placeholder="Employee ID"
               value="@(Context.Request.Query["employeeId"].FirstOrDefault() ?? "")" />
    </div>
    <div class="col-md-3">
        <input type="date" name="fromDate" class="form-control"
               value="@(Context.Request.Query["fromDate"].FirstOrDefault() ?? "")" />
    </div>
    <div class="col-md-3">
        <input type="date" name="toDate" class="form-control"
               value="@(Context.Request.Query["toDate"].FirstOrDefault() ?? "")" />
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

<!-- ====== EXPORT LINK ====== -->
<a asp-action="ExportToExcel"
   asp-route-employeeId="@(Context.Request.Query["employeeId"].FirstOrDefault())"
   asp-route-fromDate="@(Context.Request.Query["fromDate"].FirstOrDefault())"
   asp-route-toDate="@(Context.Request.Query["toDate"].FirstOrDefault())"
   class="btn btn-success mb-3 w-50">
    Export to Excel
</a>

<!-- ====== ATTENDANCE TABLE ====== -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeId</td>
                <td>@item.EmployeeName</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AttendanceId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.AttendanceId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
